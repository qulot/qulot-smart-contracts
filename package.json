{
  "name": "qulot-smart-contracts",
  "version": "1.0.0",
  "description": "A smart contract for qulot dApp",
  "main": "index.js",
  "repository": "https://github.com/qulot/qulot-smart-contracts.git",
  "keywords": [
    "qulot",
    "lottery",
    "eth"
  ],
  "license": "ISC",
  "scripts": {
    "compile": "npx hardhat compile --show-stack-traces",
    "deploy:testnet": "npx hardhat run --network testnet scripts/deploy.ts",
    "deploy:mainnet": "npx hardhat run --network mainnet scripts/deploy.ts",
    "scheduler:testnet": "npx hardhat run --network testnet scripts/scheduler.ts",
    "scheduler:mainnet": "npx hardhat run --network mainnet scripts/scheduler.ts",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:size-contracts": "npx hardhat size-contracts",
    "typechain": "npx hardhat typechain"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.12.6",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "node-schedule": "^2.1.1"
  }
}
